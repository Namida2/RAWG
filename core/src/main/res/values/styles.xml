<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.RAWG" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blackLite</item>
        <item name="colorSecondaryVariant">@color/blackLite</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="snackbarStyle">@style/MySnackBar</item>
        <item name="tabStyle">@style/tabLayoutStyle</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        <item name="materialCalendarHeaderTitle">@style/HeaderTitleHide</item>-->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <!-- Customize text field of the text input mode. -->
    </style>

<!--    <style name="HeaderTitleHide" parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderTitle">-->
<!--        <item name="android:visibility">gone</item>-->
<!--    </style>-->

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="backgroundTint">@color/black</item>
    </style>
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="tabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/tabButtonTextAppearance</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="tabButtonTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="confirmButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_dialog_message_button</item>
        <item name="rippleColor">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ConfirmButtonStyle</item>
    </style>

    <style name="ThemeOverlay.App.ConfirmButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/blackLite</item>
    </style>

    <style name="alertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/animErrorAlertDialogStyle</item>
    </style>

    <style name="animErrorAlertDialogStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_hide</item>
    </style>

    <style name="MySnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/blackLite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="materialThemeOverlay">@style/buttonThemeOverlay</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="shapeAppearance">@style/buttonShapeAppearance</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
    </style>

    <style name="buttonShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="buttonThemeOverlay" parent="" >
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

</resources>

