<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/blackLite"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/blackLite"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="164dp"
            app:shimmer_auto_start="true"
            app:shimmer_base_color="@color/gray"
            app:shimmer_colored="true"
            app:shimmer_dropoff="200"
            app:shimmer_duration="1400"
            app:shimmer_highlight_color="@color/blackLite">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="16dp"
                app:cardElevation="16dp" />

        </com.facebook.shimmer.ShimmerFrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icWindows"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_placeholder" />

            <ImageView
                android:id="@+id/icPlaystation"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_placeholder" />

            <ImageView
                android:id="@+id/icXbox"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_placeholder" />

            <ImageView
                android:id="@+id/icNintendoSwitch"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_placeholder" />

            <ImageView
                android:id="@+id/icIOS"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_placeholder" />

            <ImageView
                android:id="@+id/icAndroid"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_placeholder" />

        </LinearLayout>

        <TextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_placeholder"
            android:fontFamily="@font/montserrat_regular"
            android:text="000000000000000000"
            android:textColor="@color/gray"
            android:textSize="12sp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/addedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_placeholder"
            android:drawablePadding="4dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="0000000"
            android:textColor="@color/gray"
            android:textSize="12dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
